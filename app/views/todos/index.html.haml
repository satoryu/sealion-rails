%h1 Todos

= turbo_frame_tag 'todo-form', target: '_top' do
  = form_for @todo do |f|
    = f.label :content
    = f.text_field :content

    = f.submit

= turbo_frame_tag 'todo-list' do
  %ul
    - @todos.each do |todo|
      %li
        = todo.content
        = link_to 'Complete', complete_todo_path(todo), method: :post
